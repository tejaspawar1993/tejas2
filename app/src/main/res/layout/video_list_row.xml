<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="190dp">

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/video_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/video_thumbnail"
        android:layout_alignTop="@+id/video_thumbnail"
        android:layout_alignRight="@+id/video_thumbnail"
        android:layout_alignBottom="@+id/video_thumbnail"
        android:layout_margin="1dp"
        android:gravity="bottom"
        android:text="Hello"
        android:background="@drawable/folder_list_background"
        android:textColor="#FF4AC6FF" />

</RelativeLayout>